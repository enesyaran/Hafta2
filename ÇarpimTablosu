package Hafta1;

import java.util.Scanner;

public class çarpimTablosu {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("1-10 arasında bir sayı giriniz: ");
        int sayi = scanner.nextInt();

        if(1>sayi || 10<sayi){
            System.out.println("Hatalı sayi girdiniz!");// 1 ile 10 arasında olduğunu kontrol ediyor.
        }
        for(int a=1 ; a<=sayi ; a++){
           for (int b=1 ; b<=sayi ; b++){
               System.out.printf("%-4d", a*b);

           }
            System.out.println();// alt satıra geçmek için
        }
    }
}
//1 den 10 kadar sayıların çarpım tablosunu içi içe for döngüsü ile hesaplıyor.
