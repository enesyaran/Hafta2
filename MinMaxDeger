import java.util.Scanner;
public class Main {
  
  public static void main(String[] args) {
  
    Scanner scanner = new Scanner(System.in);
   
    System.out.println("Sayı giriniz: ");
    double sayi = scanner.nextDouble();

    System.out.println("En yakın Tam sayi "+ Math.round(sayi)); 
    System.out.println("Bir üst tam sayi" + Math.ceil(sayi));  
    System.out.println("Bir alt tam sayi" + Math.floor(sayi));
  }


}
